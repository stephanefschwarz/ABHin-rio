<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/music_name_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome música"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="3dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

            <TextView
                android:id="@+id/author_name_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome autor"
                android:gravity="center"
                android:paddingBottom="10dp"/>

            <TextView
                android:id="@+id/music_content"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="Esse é um teste para ver o espaço que vai ocupar esse "/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>