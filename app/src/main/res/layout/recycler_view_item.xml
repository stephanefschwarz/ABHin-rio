<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/linear_layout" >

    <TextView
        android:id="@+id/number_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/music_number_layout"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Nome musica"
        android:layout_toRightOf="@id/number_icon"
        android:paddingLeft="10dp"
        android:layout_toEndOf="@id/number_icon"
        android:paddingTop="5dp"
        />

    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Autor Conhecido"
        android:layout_toRightOf="@id/number_icon"
        android:paddingLeft="10dp"
        android:layout_toEndOf="@id/number_icon"
        android:layout_below="@id/music_name"/>


</RelativeLayout>